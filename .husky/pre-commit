STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(js|jsx|ts|tsx)$')
if [ -n "$STAGED_FILES" ]; then
    echo "üîç Running ESLint on staged files..."
    /home/stef/blind_site/node_modules/.bin/eslint $STAGED_FILES || {
        echo "‚ùå ESLint failed. Fix the errors and try committing again."
        exit 1
    }
fi