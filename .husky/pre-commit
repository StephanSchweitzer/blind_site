# Check if dependencies are in sync
echo "ğŸ” Checking if dependencies are in sync..."
pnpm install --frozen-lockfile || {
    echo "âŒ Dependencies are out of sync. Run 'pnpm install' and try committing again."
    exit 1
}

# ESLint check using pnpm
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(js|jsx|ts|tsx)$' || true)

if [ -n "$STAGED_FILES" ]; then
    echo "ğŸ” Running ESLint on staged files..."
    pnpm eslint $STAGED_FILES || {
        echo "âŒ ESLint failed. Fix the errors and try committing again."
        exit 1
    }
else
    echo "No JavaScript/TypeScript files to lint, proceeding with commit"
fi

# If we get here, everything is good
exit 0